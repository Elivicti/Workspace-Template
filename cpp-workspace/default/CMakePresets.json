{
	"version": 3,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 21,
		"patch": 0
	},
	"configurePresets": [
		{
			"name": "base",
			"hidden": true,
			"generator": "Ninja",
			"binaryDir": "${sourceDir}/build/${presetName}",
			"installDir": "${sourceDir}/build/${presetName}/install",
			"cacheVariables": {
				"CMAKE_EXPORT_COMPILE_COMMANDS": true,
				"CMAKE_CXX_EXTENSIONS": false
			}
		},
		{
			"name": "compiler-msvc",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_C_COMPILER": "cl.exe",
				"CMAKE_CXX_COMPILER": "cl.exe",
				"CMAKE_LINKER": "link.exe"
			},
			"environment": {
				"MSVC_FLAGS": "/utf-8",
				"CXXFLAGS": "$env{MSVC_FLAGS}",
				"CFLAGS": "$env{MSVC_FLAGS}"
			}
		},
		{
			"name": "compiler-gcc",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_C_COMPILER": "gcc",
				"CMAKE_CXX_COMPILER": "g++"
			}
		},
		{
			"name": "compiler-clang",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_C_COMPILER": "clang",
				"CMAKE_CXX_COMPILER": "clang++"
			}
		},
		{
			"name": "x64-base",
			"hidden": true,
			"inherits": "base",
			"architecture": {
				"value": "x64",
				"strategy": "external"
			}
		},

		{
			"name": "sys-windows",
			"hidden": true,
			"toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
			"cacheVariables": {
			},
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Windows"
			}
		},
		{
			"name": "sys-linux",
			"hidden": true,
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Linux"
			}
		},


		{
			"name": "x64-win-debug",
			"inherits": [
				"sys-windows",
				"x64-base",
				"compiler-msvc"
			],
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug"
			}
		},
		{
			"name": "x64-win-release",
			"inherits": [
				"sys-windows",
				"x64-base",
				"compiler-msvc"
			],
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release"
			}
		},

		{
			"name": "x64-linux-debug",
			"inherits": [
				"sys-linux",
				"x64-base",
				"compiler-gcc"
			],
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug"
			}
		},
		{
			"name": "x64-linux-release",
			"inherits": [
				"sys-linux",
				"x64-base",
				"compiler-gcc"
			],
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release"
			}
		}
	],
	"buildPresets": [
		{
			"name": "x64-win-debug",
			"configurePreset": "x64-win-debug"
		},
		{
			"name": "x64-win-release",
			"configurePreset": "x64-win-release"
		},
		{
			"name": "x64-linux-debug",
			"configurePreset": "x64-linux-debug"
		},
		{
			"name": "x64-linux-release",
			"configurePreset": "x64-linux-release"
		}
	]
}
