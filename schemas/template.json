{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"properties": {
		"$schema": {
			"type": "string"
		},
		"title": {
			"type": "string"
		},
		"description": {
			"type": "string"
		},
		"variants": {
			"type": "object",
			"minProperties": 1,
			"patternProperties": {
				"^[A-Za-z_][A-Za-z0-9_-]*$": {
					"type": "object",
					"properties": {
						"alias": {
							"type": "array",
							"items": {
								"type": "string",
								"pattern": "^[A-Za-z_][A-Za-z0-9_-]*$",
								"minLength": 1
							},
							"uniqueItems": true
						},
						"path": {
							"type": "string"
						},
						"inherits": {
							"type": "string"
						}
					},
					"required": [ "path" ],
					"additionalProperties": false
				}
			},
			"additionalProperties": false
		},
		"project_file_patterns": {
			"type": "array",
			"items": {
				"type": "string",
				"format": "regex"
			},
			"description": "an array of regular expressions, used to check if file is considered as project file, in which '#<name>#' is searched and replaced with actual project name"
		},
		"delete_marker": {
			"type": "string",
			"pattern": "^\\..+$",
			"description": "file suffix that indicates this file shall be removed from inheritance, defauts to '.#delete'"
		},
		"default": {
			"type": "string",
			"pattern": "^[A-Za-z_][A-Za-z0-9_-]*$"
		}
	},
	"required": [
		"variants"
	],
	"additionalProperties": false
}
